@model IEnumerable<WebEncuesta.Models.Pregunta>

@{
    ViewBag.Title = "EnPage";
    Layout = "~/Views/Shared/_LayoutSum.cshtml";
}
<link href="~/Content/css/wizard.css" rel="stylesheet" />
<h2>EnPage</h2>

<main class="pt-3 mx-lg-5">
    <div class="container-fluid mt-3">
        <!-- Heading -->

        <div class="card mb-4 wow fadeIn">
            <!--Card content-->
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>@Model.FirstOrDefault().cTipEncuesta</span>
                </h4>
            </div>
        </div>
        <div class="jumbotron">
            <div class="stepwizard col-md-offset-3">
                <div class="stepwizard-row setup-panel">


                    @foreach (var item in Model.Take(1))
                    {<div class="stepwizard-step">
                            <a href="#step-@item.iNumPregunta" type="button" class="btn btn-primary btn-circle">@item.iNumPregunta</a>
                            @*<p>Step 1</p>*@
                        </div>
                    }
                    @foreach (var item in Model.Skip(1))
                    {<div class="stepwizard-step">
                            <a href="#step-@item.iNumPregunta" type="button" class="btn btn-default btn-circle" disabled="disabled">@item.iNumPregunta</a>
                            @*<p>Step 1</p>*@
                        </div>
                    }
                </div>


            </div>
            <br />
            @foreach (var item in Model)
            {
                <div class="row setup-content" id="step-@item.iNumPregunta">
                    <div class="col-xs-6 col-md-offset-3">
                        <div class="col-md-12">

                            <div class="card">
                                <h5 class="card-header">@item.cPregunta</h5>
                                <div class="card-body">
                                    @foreach (var sub in item.SubPreguntas)
                                    {

                                        switch (item.cDesc)
                                        {
                                            case "Texto":
                                                <div class="col-md-6">
                                                    <input type="text" id="@sub.iIdSubPregunta" class="form-control" placeholder="Agrega un comentario" />
                                                </div>
                                                break;

                                            case "Check":
                                                <div class="col-md-6">
                                                    <label class="checkbox">
                                                        <input type="checkbox" name="pregunta1" id="@sub.iIdSubPregunta" value="@sub.iIdSubPregunta"> @sub.cSubPregunta
                                                    </label>
                                                </div>
                                                break;
                                            case "Radio":
                                                <div class="col-md-6">
                                                    <label class="radio">
                                                        <input type="radio" name="pregunta1" id="@sub.iIdSubPregunta" value="@sub.iIdSubPregunta"> @sub.cSubPregunta
                                                    </label>
                                                </div>
                                                break;
                                            case "Dropdopwnlist":
                                                <select id="ddlSubpregunta" class="form-control">
                                                    <option value="0" selected>Seleccione</option>
                                                    <option value="@sub.iIdSubPregunta" selected>@sub.cSubPregunta</option>

                                                </select>
                                                break;
                                            default:
                                                break;
                                        }


                                    }
                                    <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                                </div>
                            </div>



                          
                          
                        </div>
                    </div>
                </div>
            }




        </div>

        <form role="form" action="" method="post">
            <div class="row setup-content" id="step-1">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 1</h3>
                        <div class="form-group">
                            <label class="control-label">First Name</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter First Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Last Name</label>
                            <input maxlength="100" type="text" required="required" class="form-control" placeholder="Enter Last Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Address</label>
                            <textarea required="required" class="form-control" placeholder="Enter your address"></textarea>
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-2">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 2</h3>
                        <div class="form-group">
                            <label class="control-label">Company Name</label>
                            <input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Company Address</label>
                            <input maxlength="200" type="text" required="required" class="form-control" placeholder="Enter Company Address" />
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button">Next</button>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-3">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <h3> Step 3</h3>
                        <button class="btn btn-success btn-lg pull-right" type="submit">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @foreach (var item in Model)
    {
        <div class="jumbotron">
            <label style="font-weight: bold;"> (@item.iNumPregunta)</label>
            <label style="font-weight: bold;">@item.cPregunta</label><br />
            @foreach (var sub in item.SubPreguntas)
            {

                switch (item.cDesc)
                {
                    case "Texto":
                        <div class="col-md-6">
                            <input type="text" id="@sub.iIdSubPregunta" class="form-control" placeholder="Agrega un comentario" />
                        </div>
                        break;

                    case "Check":
                        <div class="col-md-6">
                            <label class="checkbox">
                                <input type="checkbox" name="pregunta1" id="@sub.iIdSubPregunta" value="@sub.iIdSubPregunta"> @sub.cSubPregunta
                            </label>
                        </div>
                        break;
                    case "Radio":
                        <div class="col-md-6">
                            <label class="radio">
                                <input type="radio" name="pregunta1" id="@sub.iIdSubPregunta" value="@sub.iIdSubPregunta"> @sub.cSubPregunta
                            </label>
                        </div>
                        break;
                    case "Dropdopwnlist":
                        <select id="ddlSubpregunta" class="form-control">
                            <option value="0" selected>Seleccione</option>
                            <option value="@sub.iIdSubPregunta" selected>@sub.cSubPregunta</option>

                        </select>
                        break;
                    default:
                        break;
                }


            }
        </div>
    }


    </div>
</main>

@section scripts
{
    <script>

        $(document).ready(function () {
            var navListItems = $('div.setup-panel div a'),
                allWells = $('.setup-content'),
                allNextBtn = $('.nextBtn');

            allWells.hide();

            navListItems.click(function (e) {
                e.preventDefault();
                var $target = $($(this).attr('href')),
                    $item = $(this);

                if (!$item.hasClass('disabled')) {
                    navListItems.removeClass('btn-primary').addClass('btn-default');
                    $item.addClass('btn-primary');
                    allWells.hide();
                    $target.show();
                    $target.find('input:eq(0)').focus();
                }
            });

            allNextBtn.click(function () {
                var curStep = $(this).closest(".setup-content"),
                    curStepBtn = curStep.attr("id"),
                    nextStepWizard = $('div.setup-panel div a[href="#' + curStepBtn + '"]').parent().next().children("a"),
                    curInputs = curStep.find("input[type='text'],input[type='url']"),
                    isValid = true;

                $(".form-group").removeClass("has-error");
                for (var i = 0; i < curInputs.length; i++) {
                    if (!curInputs[i].validity.valid) {
                        isValid = false;
                        $(curInputs[i]).closest(".form-group").addClass("has-error");
                    }
                }

                if (isValid)
                    nextStepWizard.removeAttr('disabled').trigger('click');
            });

            $('div.setup-panel div a.btn-primary').trigger('click');
        });

    </script>

}
