@model IEnumerable<WebEncuesta.Models.Encuesta>

@{
    ViewBag.Title = "Page";
    Layout = "~/Views/Shared/_LayoutSum.cshtml";
}

<h2>Page</h2>

<main class="pt-3 mx-lg-5">
    <div class="container-fluid mt-3">
        <!-- Heading -->
        <div class="card mb-4 wow fadeIn">
            <!--Card content-->
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>Encuestas</span>
                </h4>
            </div>
        </div>
        <div class="card mb-4 wow fadeIn">
            <!--Card content-->
            <div class="card-body d-sm-flex justify-content-between">
                <h4 class="mb-2 mb-sm-0 pt-1">
                    <span>@Helper.GetUser().Email</span>
                </h4>
            </div>
        </div>
        <div class="jumbotron">
            <table class="table table-striped table-bordered table-sm" id="tblEncuestas">
                <thead style="background:#001D18; color:white">

                    <tr class="text-center">

                        <th>
                            TIPO DE ENCUESTA
                        </th>
                        <th>
                            DESCRIPCION
                        </th>
                        <th>
                            STATUS
                        </th>

                        <th>

                        </th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.cTipEncuesta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cDescripcion)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.bStatus)
                        </td>
                        <td class="text-center">
                            @if (item.Contestada == 0)
                            {
                                <a href="@Url.Action("EnPage","EncuestaPage", new {iIdEncuesta = item.iIdEncuesta})" class="btn btn-md btn-outline-primary">
                                    Ir a Encuesta
                                </a>
                            }
                            else
                            {
                                <i class="fa fa-check" style="color:green"></i>
                            }


                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>

</main>


